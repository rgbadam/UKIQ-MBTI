.container {
  min-height: 100vh;
  position: relative;
  font-family: 'Alpsoft Jurnal';
  background: linear-gradient(135deg, #ffffff 50%, #f8f0ff 70%, #f0e6ff 80%, #e8dcff 100%);
}

/* Navbar Section */
.navbar {
  top: 0;
  left: 0;
  right: 0;
  z-index: 998;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  border-radius: 0 0 40rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 300rpx;
  transition: padding-bottom 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  background: linear-gradient(0deg, #ffffff 0%, #8e44ad 100%);
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, transparent 100%);
}

.navbar.navbar-move {
  padding-bottom: 210rpx;
}

.nav-title {
  color: #ffffff;
  font-size: 35rpx;
  padding: 15rpx 0;
  text-align: center;
  letter-spacing: 1rpx;
  font-family: "Shirkhan Egme";
  position: relative;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0);
  opacity: 0;
}

.nav-title.nav-title-show {
  opacity: 1;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.15);
  position: relative;
  bottom: 10rpx;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

/* Search Section */
.search-section {
  position: fixed;
  top: calc(env(safe-area-inset-top) + 80rpx);
  left: 0;
  right: 0;
  gap: 20rpx;
  z-index: 998;
  padding: 20rpx 30rpx;
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-title {
  opacity: 1;
  font-size: 44rpx;
  color: #ffffff;
  font-family: "Shirkhan Egme";
  text-align: center;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  transform: translateY(0) scale(1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-title.title-hide {
  transform: translateY(-30rpx) scale(0.95);
  opacity: 0;
}

.search-bar {
  width: 60%;
  margin: 0 auto;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 100rpx;
  padding: 15rpx 20rpx;
  transform: translateY(0);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 30rpx rgba(142, 68, 173, 0.08),
              inset 0 1px 0 rgba(255, 255, 255, 0.6);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-bar.focused {
  width: 90%;
  padding: 20rpx 20rpx;
  transform: translateY(-90rpx);
  background: rgba(255, 255, 255, 0.98);
  box-shadow: 0 15rpx 40rpx rgba(142, 68, 173, 0.12),
              inset 0 1px 0 rgba(255, 255, 255, 0.9);
}

.icon-container {
  width: 44rpx;
  height: 44rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.clear-container {
  margin-right: 20rpx;
}

.search-container {
  margin-left: 20rpx;
}

.search-icon,
.clear-icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(1) rotate(0deg);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 1;
}

.clear-icon.hide {
  opacity: 0;
  transform: translate(-50%, -50%) scale(0.8) rotate(90deg);
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-family: "Alpsoft Jurnal";
  padding: 0;
  height: 44rpx;
  line-height: 44rpx;
  text-align: right;
  min-width: 0;
}

/* Results Section */
.results-container {
  flex: 1;
  margin-top: calc(env(safe-area-inset-top) + 300rpx);
  transition: margin-top 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.results-container.results-move {
  margin-top: calc(env(safe-area-inset-top) + 210rpx);
}

/* Loading State */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(92, 103, 255, 0.1);
  border-top: 4rpx solid #5c67ff;
  border-radius: 50%;
  animation: spin 1.2s cubic-bezier(0.76, 0, 0.24, 1) infinite;
  position: relative;
}

.spinner:before, .spinner:after {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(92, 103, 255, 0.05);
  animation: pulse 2s linear infinite;
}

.spinner:after {
  animation-delay: 1s;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {  
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0; }
  100% { transform: scale(1.6); opacity: 0; }
}

/* Names Container */
.names-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
}

.name-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 20rpx;
  background-color: white;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  transition: all 0.3s ease;
}

.name-card:active {
  transform: scale(0.98);
}

.avatar-container {
  width: 80rpx;
  height: 80rpx;
  min-width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.male-avatar {
  background: linear-gradient(145deg, #f0f7ff 0%, #e3edfd 100%);
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.female-avatar {
  background: linear-gradient(145deg, #fff5f8 0%, #ffeef5 100%);
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.avatar-letter {
  font-size: 34rpx;
  font-weight: bold;
  color: #5c67ff;
  text-shadow: none;
  opacity: 1;
  margin-top: 15rpx;
  font-family: "Shirkhan Egme";
}

.female-avatar .avatar-letter {
  color: #ff6b95;
}

.name-details {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: scaleUp 1s ease-in-out forwards;
  min-height: 100rpx;
  position: relative;
}

.name-title {
  font-weight: bold;
  color: #333;
  width: 100%;
  text-align: center; 
  font-size: 36rpx;
  margin-bottom: 10rpx;
  font-family: "Shirkhan Egme";
}

.name-subtitle {
  width: 100%;
  font-size: 26rpx;
  color: #777;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  font-family: sans-serif, Arial, Helvetica, '黑体';
}

/* No Names Message */
.no-names {
  padding: 60rpx 30rpx;
  text-align: center;
  color: #5a546a;
  font-size: 28rpx;
  margin-top: 120rpx;
  background-color: #fbfafc;
  border-radius: 20rpx;
  border: 1rpx solid rgba(233, 230, 236, 0.8);
  max-width: 80%;
  margin-left: auto;
  margin-right: auto;
}

@keyframes scaleUp {
  from { transform: scale(0.98); }
  to { transform: scale(1); }
} 