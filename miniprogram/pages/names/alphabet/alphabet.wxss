.container {
  height: 100vh;
  background: linear-gradient(135deg, #f8f9fe 0%, #eef1f9 100%);
  font-family: 'Alpsoft Jurnal';
  overflow: hidden;
}

/* Navbar styles */
.navbar {
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  background: transparent;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 5rpx;
  border-radius: 0 0 40rpx 40rpx;
  backdrop-filter: blur(20px);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.15);
  position: relative;
  bottom: 10rpx;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  color: #ffffff;
  font-size: 35rpx;
  padding: 15rpx 0;
  text-align: center;
  letter-spacing: 1rpx;
  font-family: "Shirkhan Egme";
  position: relative;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.content-wrapper {
  position: relative;
  height: 100vh;
  width: 100%;
  -webkit-overflow-scrolling: touch;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.features {
  position: fixed;
  top: 0;
  width: 100%;
  background: linear-gradient(180deg, #6357e6 0%, #7157e6 50%, #6b46c1 100%);
  padding-top: calc(env(safe-area-inset-top) + 80rpx);
  display: flex;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
  z-index: 0;
  height: 900rpx;
  border-radius: 0 0 60rpx 60rpx;
  box-shadow: 0 20px 40px rgba(107, 70, 193, 0.15);
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, transparent 100%);
}

.f-fold {
  height: 900rpx;
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 30%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 30%, transparent 100%);
}

.illust {
  flex: 1;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  width: 100%;
  padding: 20rpx;
  opacity: 1;
  transform: translateY(0) scale(1);
  transition: all 0.8s cubic-bezier(0.4, 1, 0.2, 1);
}

.i-fold {
  opacity: 0;
  transform: scale(0.5);
}

.image-wrapper {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: rotate 60s cubic-bezier(1, 1, 1, 1) infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.illust image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  animation: fadeIn 0.8s ease-in-out forwards;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.image-glow {
  position: absolute;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, transparent 70%);
  filter: blur(20px);
  z-index: -1;
}

/* Grid Layout */
.alphabet-grid {
  position: absolute;
  top: 700rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  padding: 20rpx 0 80rpx;
  gap: 25rpx;
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.g-fold {
  transform: translateY(-480rpx) scale(0.95);
}

/* Letter Card Styles */
.letter-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 36rpx;
  padding: 20rpx;
  width: 120rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8px 24px rgba(107, 70, 193, 0.08);
  backdrop-filter: blur(12px);
  position: relative;
  animation: fadeIn 0.8s ease-in-out forwards;
}

.c-fold {
  padding: 5rpx;
  box-shadow: 0 8px 24px rgba(107, 70, 193, 0.1);
}

.letter-card:active {
  transform: scale(0.95);
  box-shadow: 0 4px 12px rgba(107, 70, 193, 0.06);
}

.letter-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.letter {
  font-size: 60rpx;
  color: #2d2e4a;
}

.count {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  font-size: 24rpx;
  color: #6b46c1;
  background: rgba(107, 70, 193, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 36rpx 20rpx 20rpx 20rpx;
  min-width: 24rpx;
  text-align: center;
}