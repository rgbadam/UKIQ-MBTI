/* Common styles for all name-related pages */
page {
  font-family: 'alpsoft tuz' !important;
  direction: rtl;
  text-align: right;
}

.rtl-container {
  direction: rtl;
  text-align: right;
  font-family: 'alpsoft tuz';
}

.rtl-flex {
  display: flex;
  flex-direction: row-reverse;
}

/* Convert margin and padding for RTL */
.rtl-margin-left {
  margin-right: 0;
  margin-left: auto;
}

.rtl-margin-right {
  margin-left: 0;
  margin-right: auto;
}

/* Convert border sides for RTL */
.rtl-border-left {
  border-left: none;
  border-right-width: inherit;
  border-right-style: inherit;
  border-right-color: inherit;
}

.rtl-border-right {
  border-right: none;
  border-left-width: inherit;
  border-left-style: inherit;
  border-left-color: inherit;
}

/* Convert position for RTL */
.rtl-position-right {
  right: auto;
  left: 0;
}

.rtl-position-left {
  left: auto;
  right: 0;
}

/* Common Header Styles */
.header {
  width: 100%;
  padding: 40rpx 30rpx 50rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(255,255,255,0.1), rgba(255,255,255,0));
  z-index: 1;
}

.header-title {
  position: relative;
  z-index: 2;
  text-align: center;
}

.title-text {
  font-size: 42rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 12rpx;
  display: block;
}

.subtitle-text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  display: block;
  margin-top: 8rpx;
}

/* Header Variants */
.header.male-header {
  background: #3498db;
}

.header.female-header {
  background: #e84393;
}

.header.alphabet-header {
  background: #2ecc71;
}

.header.favorites-header {
  background: #e74c3c;
}

.header.search-header {
  background: #9b59b6;
}

.header.main-header {
  background: #8e44ad;
}

/* Header Actions */
.header-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 25rpx;
  position: relative;
  z-index: 2;
}

.action-button {
  background: rgba(255,255,255,0.15);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  transition: all 0.2s ease;
}

.action-button:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.2);
}

.action-icon {
  font-size: 28rpx;
  color: #ffffff;
}

.action-text {
  font-size: 24rpx;
  color: #ffffff;
}