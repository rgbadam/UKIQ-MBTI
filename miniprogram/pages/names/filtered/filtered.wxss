.container {
  min-height: 100vh;
  position: relative;
  font-family: 'Alpsoft Jurnal';
  background-color: #ffffff;
}

.container.dark {
  background-color: #1a1b1e;
}

.male {
  background: linear-gradient(135deg, #ffffff 50%, #e8f0ff 70%, #c5d8ff 80%, #89a4e8 100%);
  position: relative;
  overflow: hidden;
}

.male.dark {
  background: linear-gradient(135deg, #1a1b1e 50%, #1c2333 70%, #1e2942 80%, #1f2d4d 100%);
}

.female {
  background: linear-gradient(135deg, #ffffff 50%, #fff0f8 70%, #ffd6eb 80%, #ffb5d8 100%);
  position: relative;
  overflow: hidden;
}

.female.dark {
  background: linear-gradient(135deg, #1a1b1e 50%, #2a1f26 70%, #2d1f28 80%, #331f2a 100%);
}

/* Loading State */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  gap: 20rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(92, 103, 255, 0.1);
  border-top: 4rpx solid #5c67ff;
  border-radius: 50%;
  animation: spin 1.2s cubic-bezier(0.76, 0, 0.24, 1) infinite;
  position: relative;
}

.spinner:before, .spinner:after {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(92, 103, 255, 0.05);
  animation: pulse 2s linear infinite;
}

.spinner:after {
  animation-delay: 1s;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {  
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0; }
  100% { transform: scale(1.6); opacity: 0; }
}

/* Navbar Section */
.navbar {
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  border-radius: 0 0 40rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 5rpx;
  transition: background 0.3s ease,
              backdrop-filter 0.3s ease,
              -webkit-backdrop-filter 0.3s ease;
}

.male-navbar {
  background: #ffffff;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.male-navbar.dark {
  background: #1a1b1e;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.female-navbar {
  background: #ffffff;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.female-navbar.dark {
  background: #1a1b1e;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.nav-title {
  color: #424242;
  font-size: 35rpx;
  padding: 15rpx 0;
  text-align: center;
  letter-spacing: 1rpx;
  font-family: "Shirkhan Egme";
  position: relative;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.dark .nav-title {
  color: #e0e0e0;
}

.nav-search {
  position: relative;
  left: 0;
  bottom: 10rpx;
  padding: 17rpx;
  margin-left: 20rpx;
  border-radius: 50rpx;
  background-color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.dark .nav-search {
  background-color: rgba(255, 255, 255, 0.06);
}

/* Fun Area */
.fun-area {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.bg-image {
  margin-top: calc(env(safe-area-inset-top) + 0rpx);
  width: 600rpx;
  height: 600rpx;
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, transparent 100%);
  animation: cartoon 1s ease-in-out forwards;
}

.function-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 100rpx;
}

.function-btn {
  width: 90rpx;
  height: 90rpx;
  margin: 0 20rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.dark .function-btn {
  background: rgba(255, 255, 255, 0.06);
  border: 1rpx solid rgba(60, 61, 65, 0.6);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.function-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.dark .function-btn:active {
  background: rgba(55, 56, 60, 0.9);
}

.btn-icon {
  width: 24px;
  height: 24px;
  transition: transform 0.3s ease;
}

.dark .btn-icon {
  opacity: 0.9;
  filter: brightness(0.9) contrast(0.9);
}

.flip {
  transform: scaleY(-1);
}

.globe-uyghur {
  transform: rotate(0deg);
}

.globe-latin {
  transform: rotate(90deg);
}

.globe-chinese {
  transform: rotate(180deg);
}

/* Names Container */
.names-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
}

.name-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 20rpx;
  background-color: white;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  transition: all 0.3s ease;
}

.dark .name-card {
  background: rgba(255, 255, 255, 0.06);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.name-card:active {
  transform: scale(0.98);
}

.avatar-container {
  width: 80rpx;
  height: 80rpx;
  min-width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.male-avatar {
  background: linear-gradient(145deg, #f0f7ff 0%, #e3edfd 100%);
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.dark .male-avatar {
  background: linear-gradient(145deg, rgba(240, 247, 255, 0.08) 0%, rgba(227, 237, 253, 0.12) 100%);
  box-shadow: inset -2rpx -2rpx 4rpx rgba(255, 255, 255, 0.02);
}

.female-avatar {
  background: linear-gradient(145deg, #fff5f8 0%, #ffeef5 100%);
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.dark .female-avatar {
  background: linear-gradient(145deg, rgba(255, 245, 248, 0.08) 0%, rgba(255, 238, 245, 0.12) 100%);
  box-shadow: inset -2rpx -2rpx 4rpx rgba(255, 255, 255, 0.02);
}

.avatar-letter {
  font-size: 34rpx;
  font-weight: bold;
  color: #5c67ff;
  text-shadow: none;
  opacity: 1;
  transition: all 0.3s ease;
  text-transform: uppercase;
  font-family: sans-serif, "Shirkhan Egme", Arial, Helvetica, '黑体';
}

.female-avatar .avatar-letter {
  color: #ff6b95;
}

.dark .avatar-letter {
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.avatar-letter.fadeSwitch {
  opacity: 0;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  opacity: 1;
  transition: all 0.3s ease;
}

.avatar.fadeSwitch {
  opacity: 0;
}

.name-details {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: scaleUp 1s ease-in-out forwards;
  min-height: 100rpx;
  position: relative;
}

.name-title {
  font-weight: bold;
  color: #333;
  width: 100%;
  text-align: center;
  opacity: 1;
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.name-title.fadeSwitch {
  opacity: 0;
}

.dark .name-title {
  color: #e0e0e0;
}

.name-title.ug {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  font-family: "Shirkhan Egme";
}

.name-title.lt {
  font-size: 34rpx;
  margin-bottom: 20rpx;
  font-family: sans-serif, Arial, Helvetica;
}

.name-title.ch {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-family: sans-serif, Arial, Helvetica, '黑体';
}

.name-subtitle {
  width: 100%;
  font-size: 26rpx;
  color: #777;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  opacity: 1;
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.name-subtitle.fadeSwitch {
  opacity: 0;
}

.dark .name-subtitle {
  color: #9a9a9a;
}

.name-subtitle.lc {
  font-family: sans-serif, Arial, Helvetica, '黑体';
}

.name-subtitle.cu {
  font-family: '黑体', 'Alpsoft Qara';
}

.name-subtitle.ul {
  font-family: 'Alpsoft Qara'
}

/* No Names Message */
.no-names {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  position: relative;
  min-height: 60vh;
}

.no-match-image {
  width: 420rpx;
  height: 420rpx;
  transform: scale(0.95);
  animation: float 4s ease-in-out infinite;
  position: relative;
}

.no-match-text {
  font-size: 32rpx;
  color: #666;
  font-family: "Alpsoft Qara";
  text-align: center;
  opacity: 0.85;
  position: relative;
  padding: 0 40rpx;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(0.95) rotate(0deg);
  }
  50% {
    transform: translateY(-15rpx) scale(0.95) rotate(1deg);
  }
}

@keyframes scaleUp {
  from { transform: scale(0.98); }
  to { transform: scale(1); }
}

@keyframes cartoon {
  from { 
    transform: scale(0.98); 
    opacity: 0;
  }
  to { 
    transform: scale(1); 
    opacity: 1;
  }
}
