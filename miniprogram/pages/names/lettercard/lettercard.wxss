.lettercard {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #4f6ef7 0%, #6a8dff 100%);
}

/* Navigation */
.navbar {
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(255,255,255,0.13);
  position: relative;
}

.back-btn:active {
  background: rgba(255,255,255,0.22);
  transform: scale(0.95);
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

/* Avatar Section */
.letterbox-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding-top: calc(env(safe-area-inset-top) + 50rpx);
}

.circle-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #b1c6ff44;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #fff 60%, #e3edfd 100%);
  box-shadow: 0 8rpx 32rpx rgba(80, 120, 255, 0.18), 0 0 0 12rpx #e3edfd, 0 0 40rpx 0 #b1c6ff44;
  animation: scaleIn 1s ease-in-out forwards;
}

.letterbox-text {
  font-size: 100rpx;
  font-weight: bold;
  color: #4f6ef7;
  font-family: "Shirkhan Egme";
  transform: translateY(15rpx);
  text-shadow: 0 4rpx 16rpx #b1c6ff66, 0 1rpx 0 #fff;
}

.letterbox-desc {
  font-size: 42rpx;
  color: #fff;
  font-weight: 700;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  text-shadow: 0 2rpx 8rpx #4f6ef7cc;
  font-family: "Shirkhan Egme";
  animation: fadeIn 1s ease-in-out forwards;
}

/* Stats Section */
.stats-section {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin: 30rpx 0 60rpx;
}

.stat-box {
  background: rgba(255,255,255,0.13);
  border-radius: 24rpx;
  padding: 30rpx 26rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 150rpx;
  box-shadow: 0 2rpx 10rpx rgba(80, 120, 255, 0.08);
}

.stat-num {
  font-size: 44rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #e3e9ff;
  font-family: "Shirkhan Egme";
}

/* Names Card Section */
.names-card {
  background: #fff;
  border-radius: 40rpx;
  margin: 0 30rpx 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(80, 120, 255, 0.08);
  padding: 36rpx 0;
  min-height: 400rpx;
  position: relative;
}

.names-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 30rpx;
}

.name-card {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 32rpx 18rpx;
  background-color: #f8faff;
  border-radius: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(80, 120, 255, 0.04);
  transition: all 0.3s ease;
}

.name-card:active {
  transform: scale(0.98);
}

.avatar-container {
  width: 70rpx;
  height: 70rpx;
  min-width: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.male-avatar {
  background: linear-gradient(145deg, #f0f7ff 0%, #e3edfd 100%);
}

.female-avatar {
  background: linear-gradient(145deg, #fff5f8 0%, #ffeef5 100%);
}

.avatar-container .avatar-letter {
  font-size: 32rpx;
  color: #4f6ef7;
  font-weight: bold;
  font-family: "Shirkhan Egme";
  margin-top: 8rpx;
}

.female-avatar .avatar-letter {
  color: #ff6b95;
}

.name-details {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-height: 70rpx;
}

.name-title {
  font-weight: bold;
  color: #333;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 6rpx;
  font-family: "Shirkhan Egme";
}

.name-subtitle {
  width: 100%;
  font-size: 22rpx;
  color: #888;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  font-family: sans-serif, Arial, Helvetica, '黑体';
}

.no-names {
  padding: 60rpx 30rpx;
  text-align: center;
  color: #5a546a;
  font-size: 28rpx;
  margin: 60rpx auto 0;
  background-color: #fbfafc;
  border-radius: 20rpx;
  border: 1rpx solid rgba(233, 230, 236, 0.8);
  max-width: 80%;
}

@keyframes scaleIn {
  0% {
    opacity: 0.8;
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes fadeIn {
  0% {
    opacity: 0.8;
  }
  100% {
    opacity: 1;
  }
}
