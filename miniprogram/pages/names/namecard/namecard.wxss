.detail-page {
  min-height: 100vh;
  color: white;
  background: #1e1e2e;
  font-family: 'Alpsoft Jurnal';
  animation: bg 1s ease-in-out forwards;
}

/* Navigation */
.custom-nav {
  top: 0;
  left: 0;
  right: 0;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.06);
  position: relative;
  bottom: 5rpx;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.12);
}

.back-icon {
  width: 45rpx;
  height: 45rpx;
}

/* Main Content */
.main-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Illustration Section */
.illustration-wrapper {
  width: 100%;
  height: 800rpx;
  margin-top: 60rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 10%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 10%, transparent 100%);
}

.gender-illust {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  animation: fadeIn 1s ease-in-out forwards;
}

/* Name Section */
.name-section {
  text-align: center;
  margin-top: -120rpx;
  z-index: 2;
  padding: 0 40rpx;
}

.name-uyghur {
  display: block;
  margin-bottom: 20rpx;
  font-size: 140rpx;
  line-height: 1.2;
  font-family: 'Shirkhan Egme';
  color: rgba(255, 255, 255, 0.95);
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  animation: nameScale 1s ease-in-out forwards;
}

.sub-names {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
}

.name-latin {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
  font-family: Arial, sans-serif;
}

.name-chinese {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
  font-family: Arial, sans-serif, "黑体";
}

/* Description Section */
.description-section {
  margin: 60rpx 40rpx;
}

.meaning-card {
  min-width: 500rpx;
  min-height: 60rpx;
  direction: rtl;
  text-align: justify;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 40rpx;
  padding: 60rpx 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.description-text {
  font-size: 36rpx;
  line-height: 1.5;
  color: rgba(255, 255, 255, 0.9);
}

/* Actions Section */
.actions-section {
  width: 100%;
  position: relative;
  margin-top: auto;
  padding-bottom: 70rpx;
  display: flex;
  justify-content: center;
}

.action-group {
  display: flex;
  flex-direction: row;
  gap: 40rpx;
  position: relative;
  padding: 20rpx 0;
}

.action-btn {
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: rgba(255, 255, 255, 0.06);
  border-radius: 50%;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.action-btn:active {
  transform: scale(0.92);
  opacity: 0.8;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: scale(0.95);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes nameScale {
  0% {
    transform: scale(0.98);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes bg {
  0% {
    background: black;
  }
  100% {
    background: #1e1e2e;
  }
}
