<view class="result">
  <view class="result-box">
    <view class="type">{{ currentData.value }}</view>
    <view class="info {{isUg?'ug':'zh'}}"><span class="bold">{{ pageContent.analysis }}: </span>{{ currentData.content }}</view>
    <view class="info {{isUg?'ug':'zh'}}"><span class="bold">{{ pageContent.career }}: </span>{{ currentData.jobs }}</view>
    <view class="info {{isUg?'ug':'zh'}}"><span class="bold">{{ pageContent.advantage }}: </span>{{ currentData.advantage }}</view>
    <view class="info {{isUg?'ug':'zh'}}"><span class="bold">{{ pageContent.disadvantage }}: </span>{{ currentData.disadvantage }}</view>
    <view class="info {{isUg?'ug':'zh'}}"><span class="bold">{{ pageContent.relationship }}: </span>{{ currentData.friendship }}</view>
  </view>
  <view class="pics" wx:if="{{picUrl}}"><image src="{{ picUrl }}" mode=""/></view>
</view>