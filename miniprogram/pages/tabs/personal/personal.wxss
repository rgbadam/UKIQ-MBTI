.personal-page {
  width: 100%;
  min-height: 100vh;
  background: #fff;
}

.custom-nav {
  top: 0;
  left: 0;
  right: 0;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background: transparent;
}

.gender-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(0,0,0,0.04);
  position: relative;
  bottom: 5rpx;
}

.gender-btn:active {
  transform: scale(0.95);
  background: rgba(0,0,0,0.10);
}

.gender-icon {
  width: 45rpx;
  height: 45rpx;
}

.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  margin-top: 180rpx;
}

.profile-illust {
  width: 400rpx;
  height: 420rpx;
  border-radius: 100rpx;
  margin-bottom: 16rpx;
  background: #f5f5f7;
  object-fit: cover;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.06);
}

.profile-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-name {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  font-family: sans-serif, 'Shirkhan Egme', '黑体';
}

.profile-sign {
  font-size: 32rpx;
  color: #888;
  font-family: sans-serif, 'Alpsoft Jurnal', '黑体';
}

.profile-icons {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 24rpx;
  margin: 50rpx 0;
  padding: 0 32rpx;
}

.profile-icon-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  width: 100rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.profile-icon-block:active {
  transform: scale(0.95);
}

.profile-icon {
  width: 48rpx;
  height: 48rpx;
  padding: 12rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.profile-icon-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  font-family: sans-serif, 'Alpsoft Qara', '黑体';
  text-align: center;
}

.profile-interests {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.interests-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #444;
  /* margin-bottom: 20rpx; */
  text-align: center;
  font-family: sans-serif, 'Alpsoft Qara', '黑体';
}

.ad-area {
  width: 80%;
  height: 300rpx;
  margin: 0 auto;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  /* background: #f5f5f7; */
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
}

.ad-img {
  width: 70%;
  height: 90%;
  object-fit: cover;
}

.ad-area::after {
  content: '';
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: linear-gradient(90deg,rgba(255,255,255,0.10),rgba(255,255,255,0.18));
  pointer-events: none;
}
