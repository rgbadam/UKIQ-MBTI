.discover-container {
  width: 100%;
  min-height: 100vh;
  background: #f6f7fb;
  box-sizing: border-box;
}

.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #fff;
  box-shadow: 0 2rpx 16rpx rgba(91,61,227,0.04);
  border-radius: 0 0 36rpx 36rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  padding-top: calc(env(safe-area-inset-top));
}
.lang-switch {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 56rpx;
  color: #333;
  background: rgba(91,61,227,0.04);
  border-radius: 32rpx;
  border: 1px solid rgba(91,61,227,0.08);
  font-weight: 500;
  gap: 10rpx;
}
.lang-switch-text {
  font-size: 28rpx;
  transform: translateY(5rpx);
  font-family: "Shirkhan Egme", "黑体", Arial;
}
.lang-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  font-family: "Shirkhan Egme", "黑体", Arial;
  transform: translateY(10rpx);
}

.main-card {
  margin: 0 24rpx;
  margin-top: calc(env(safe-area-inset-top) + 120rpx);
  background: #fff;
  border-radius: 36rpx;
  box-shadow: 0 8rpx 32rpx rgba(91,61,227,0.08);
  padding: 20rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Poster Section */
.poster {
  width: 100%;
  height: 420rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
  border-radius: 18rpx;
  overflow: hidden;
}
.poster-image {
  width: 100%;
  height: 100%;
  transform: translateY(-20rpx);
}
.poster-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 90rpx;
  background: linear-gradient(90deg, #7B5FFF 0%, #5B3DE3 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 46rpx;
  margin: 10rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(91,61,227,0.12);
  transition: all 0.2s ease-in-out;
  border: none;
  font-family: "Shirkhan Egme", "黑体", Arial;
}
.poster-button:active {
  transform: scale(0.98);
}

/* Function Section */
.func-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 70rpx 0 10rpx 0;
  font-family: sans-serif, "Alpsoft Qara", "黑体", Arial;
}

.func-options {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0 24rpx 0;
}
.option-item {
  width: 30%;
  background: #f6f7fb;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(91,61,227,0.04);
}
.option-icon {
  width: 48rpx; 
  height: 48rpx;
  margin-bottom: 20rpx;
}
.option-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  font-family: sans-serif,"Shirkhan Egme", "黑体", Arial;
}

/* Result Section */
.result {
  width: 100%;
  margin-top: 32rpx;
  background: #f6f7fb;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(91,61,227,0.04);
  padding: 48rpx 0 36rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.result-title {
  font-size: 36rpx;
  color: #5B3DE3;
  font-weight: 800;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
  font-family: sans-serif, "Alpsoft Jurnal", "黑体", Arial;
}
.result-value {
  font-size: 44rpx;
  color: #E94F6B;
  font-weight: 800;
  letter-spacing: 2rpx;
  font-family: 'Poppins', 'Arial', sans-serif;
}
