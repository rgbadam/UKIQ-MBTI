<view class="discover-container">
  <view class="navbar">
    <view class="lang-switch" bindtap="switchLanguage">
      <image src="/images/icons/language.svg" class="lang-icon" />
      <view class="lang-switch-text">{{ pageText.langSwitch }}</view>
    </view>
    <view class="nav-title">{{ pageText.navBarTitle }}</view>
    <view style="width: 120rpx;"></view>
  </view>

  <view class="main-card">
    <!-- Poster Section -->
    <view class="poster" bindtap="getStarted">
      <image src="/images/illust/mbti.svg" class="poster-image" mode="aspectFit" />
    </view>
    <view class="poster-button" bindtap="getStarted">{{ pageText.getStarted }}</view>

    <!-- Function Section -->
    <view class="func-title">{{ pageText.funcTitle }}</view>
    <view class="func-options">
      <view class="option-item" bindtap="jumpTypeList">
        <image src="/images/icons/typeList.svg" class="option-icon" />
        <view class="option-label">{{ pageText.typeList }}</view>
      </view>
      <view class="option-item" bindtap="jumpAboutMbti">
        <image src="/images/icons/aboutMBTI.svg" class="option-icon" />
        <view class="option-label">{{ pageText.aboutMBTI }}</view>
      </view>
      <view class="option-item" bindtap="jumpFAQ">
        <image src="/images/icons/FAQ.svg" class="option-icon" />
        <view class="option-label">{{ pageText.FAQ }}</view>
      </view>
    </view>

    <!-- Result Section -->
    <view class="result" bindtap="jumpResultPage">
      <view class="result-title">{{ tips }}</view>
      <view class="result-value">{{ mbti }}</view>
    </view>
  </view>
</view>
