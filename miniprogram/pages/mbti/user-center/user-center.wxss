.page_container {
  min-height: 100vh;
  background: #fff;
  position: relative;
  overflow: hidden;
}

.main_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.curved_bg {
  position: absolute;
  top: -100rpx;
  left: -100rpx;
  right: -100rpx;
  height: 500rpx;
  background: linear-gradient(120deg, rgba(107, 70, 193, 0.08) 0%, rgba(128, 90, 213, 0.05) 100%);
  border-radius: 0 0 50% 50% / 0 0 100% 100%;
  transform: scaleX(1.5);
  z-index: 1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  width: 100%;
  position: relative;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 12rpx 24rpx rgba(107, 70, 193, 0.15);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 3rpx solid rgba(255, 255, 255, 0.98);
  position: relative;
  z-index: 2;
}

.avatar:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 12rpx rgba(107, 70, 193, 0.08);
}

.tips {
  margin-top: 28rpx;
  background: linear-gradient(120deg, #2D3748 0%, #4A5568 100%);
  -webkit-background-clip: text;
  color: transparent;
}

.t-ug {
  font-size: 44rpx;
  font-weight: 600;
  font-family: 'Alpsoft Jurnal';
}

.t-zh {
  font-size: 44rpx;
  font-weight: 600;
  font-family: '创粗圆';
}

.mbti {
  margin-top: 20rpx;
  background: linear-gradient(120deg, #6B46C1 0%, #805AD5 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-size: 48rpx;
  font-family: 'Trebuchet MS';
  font-weight: 600;
  letter-spacing: 2rpx;
}

.settings {
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.settings_group {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(25px);
  border-radius: 36rpx;
  padding: 20rpx;
  box-shadow: 
    0 15rpx 35rpx rgba(0, 0, 0, 0.06),
    0 3rpx 10rpx rgba(0, 0, 0, 0.02);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin: 8rpx 0;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.setting_item:active {
  background: rgba(255, 255, 255, 0.9);
  transform: scale(0.985);
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.icon_wrapper {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.purple, .blue, .green, .orange, .pink {
  background: transparent;
}

.setting_icon {
  width: 42rpx;
  height: 42rpx;
  opacity: 0.75;
  filter: none;
}

.setting_text {
  font-size: 30rpx;
  color: #2D3748;
}

.arrow_icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.25;
  transition: all 0.3s ease;
  filter: grayscale(100%);
}

.setting_item:active .arrow_icon {
  transform: translateX(4rpx);
  opacity: 0.35;
}

.contact-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  font-size: 30rpx;
  color: #2D3748;
  font-weight: 500;
}

.contact-button::after {
  display: none;
}

.button-hover {
  background-color: transparent;
}

.butt {
  margin-top: 100rpx;
  font-size: 26rpx;
  text-align: center;
  letter-spacing: 4rpx;
  background: linear-gradient(120deg, #718096 0%, #A0AEC0 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 600;
}

.ug {
  font-family: 'Alpsoft Qara';
  font-size: 32rpx;
  font-weight: 500;
}

.zh {
  font-family: '黑体';
  font-size: 32rpx;
  font-weight: 500;
}