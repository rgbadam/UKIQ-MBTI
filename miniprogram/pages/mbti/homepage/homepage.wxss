.home-box {
  min-height: 85vh;
  padding: 0 30rpx;
  background-color: #ffffff;
  padding-top: calc(130rpx + env(safe-area-inset-top));
}

.fontText .title {
  text-align: center;
  color: #5B3DE3;
  font-weight: 700;
  margin-top: 50rpx;
  text-shadow: 0 2px 4px rgba(91, 61, 227, 0.1);
}

.fontText .t-ug {
  font-size: 36px;
  font-family: 'Shirkhan Egme';
}

.fontText .t-zh {
  font-size: 34px;
  line-height: 63px;
  font-family: '黑体';
}

.fontText .sub-title {
  text-align: center;
  margin: 24rpx 0 180rpx;
  color: #5B3DE3;
  opacity: 0.75;
  letter-spacing: 1px;
}

.fontText .s-ug {
  font-size: 17px;
  font-family: 'Alpsoft Qara';
}

.fontText .s-zh {
  font-size: 17px;
  font-family: '黑体';
}

.fontPic .title {
  display: block;
  margin: 30px auto 6px;
}

.fontPic .t-ug {
  width: 240px;
  height: 42px;
}

.fontPic .t-zh {
  width: 230px;
  height: 42px;
}

.fontPic .sub-title {
  opacity: 0.8;
  display: block;
  margin: 10px auto 135rpx;
}

.fontPic .s-ug {
  width: 290px;
  height: 22px;
  margin-top: 14px;
}

.fontPic .s-zh {
  width: 220px;
  height: 26px;
}

.progress-container {
  margin: 30rpx 0;
  padding: 20rpx 24rpx;
  background: transparent;
  border-radius: 16rpx;
  position: relative;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  opacity: 0.85;
}

.progress-bar {
  position: relative;
  height: 4rpx;
  background: rgba(91, 61, 227, 0.06);
  border-radius: 2rpx;
  overflow: hidden;
}

.progress-inner {
  position: absolute;
  height: 100%;
  background: rgba(91, 61, 227, 0.8);
  border-radius: 2rpx;
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 为 LTR 方向的进度条 */
.zh .progress-inner {
  left: 0;
}

/* 为 RTL 方向的进度条 */
.ug .progress-inner {
  right: 0;
}

.progress-text {
  font-size: 22rpx;
  color: #888888;
  font-family: Arial, Helvetica, sans-serif
}

.total-tab {
  font-size: 24rpx;
  color: #666666;
  font-weight: normal;
}

.list {
  min-height: 200rpx;
  background: #ffffff;
  box-shadow: 0 12rpx 40rpx rgba(91, 61, 227, 0.06);
  padding: 10rpx 30rpx;
  border-radius: 28rpx;
  margin: 50rpx 0;
  border: 1px solid rgba(91, 61, 227, 0.08);
}

.item {
  margin: 24rpx 0;
}

.question {
  margin-bottom: 50rpx;
  padding-top: 24rpx;
  color: #333333;
  position: relative;
  padding-left: 44rpx;
  padding-right: 44rpx;
}

.question::before {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7B5FFF, #5B3DE3);
}

.rtl.question::before {
  right: 0;
  top: 43rpx;
}

.ltr.question::before {
  left: 0;
  top: 40rpx;
}

.q-ug {
  font-size: 20px;
  /* font-weight: 600; */
}

.q-zh {
  font-size: 18px;
  /* font-weight: 500; */
}

.answer {
  background: linear-gradient(to right, #F8F9FE, #F4F6FF);
  border-radius: 20rpx;
  padding: 28rpx 34rpx;
  margin-bottom: 28rpx;
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
  color: #333333;
  transition: transform 0.2s ease-out, background 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;
}

.answer:active {
  transform: scale(0.98);
}

.a-ug {
  font-size: 18px;
}

.a-zh {
  font-size: 16px;
}

.active {
  background: linear-gradient(135deg, #6B4EE6, #5B3DE3);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(91, 61, 227, 0.25);
}

.btn-box {
  width: 340rpx;
  height: 92rpx;
  background: linear-gradient(135deg, #7B5FFF, #5B3DE3);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 46rpx;
  margin: 70rpx auto;
  box-shadow: 0 12rpx 30rpx rgba(91, 61, 227, 0.25);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-box:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 20rpx rgba(91, 61, 227, 0.2);
}

.ug {
  direction: rtl;
  font-family: 'Alpsoft Jurnal';
}

.zh {
  direction: ltr;
  font-family: '黑体';
}

.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  z-index: 999;
  padding-top: calc(env(safe-area-inset-top));
}

.nav-content {
  position: relative;
  height: 65rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.lang-switch {
  font-size: 28rpx;
  color: #5B3DE3;
  padding: 10rpx 24rpx;
  background: rgba(91, 61, 227, 0.04);
  border-radius: 32rpx;
  font-weight: 500;
  transition: all 0.25s ease;
  display: flex;
  align-items: center;
  gap: 6rpx;
  border: 1px solid rgba(91, 61, 227, 0.08);
  font-family: 'Shirkhan Egme', '温暖童稚体' !important;
}

.lang-switch:active {
  transform: scale(0.98);
  background: rgba(91, 61, 227, 0.08);
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}