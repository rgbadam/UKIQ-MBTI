page {
  width: 100%;
  height: 100%;
  align-items: center;
  background-color: #fff;
}

.question {
  width: 90%;
  color: #333;
  padding: 20rpx 0 100rpx;
}

.fontText .faq {
  font-size: 21px;
  font-weight: 500;
  text-align: center;
  margin: 5px 0 46px;
  font-family: sans-serif, 'Shirkhan Egme', '黑体';
}

.fontPic .faq {
  width: 90px;
  height: 24px;
  display: block;
  margin: 15px auto 46px;
}

.fontPic .faq-ug {
  width: 150px;
  height: 34px;
  display: block;
  margin: 15px auto 46px;
}

.title {
  font-size: 16px;
  font-weight: 500;
  margin: 26px 0 10px;
}

.title-ug {
  font-size: 18px;
  font-weight: 500;
  margin: 26px 0 10px;
}

.content {
  text-indent: 1em;
  margin-top: 10px;
  line-height: 26px;
  text-align: justify;
}

.butt {
  font-size: 14px;
  margin-top: 80rpx;
  text-align: center;
  letter-spacing: 1px;
  color: #ccc;
}

.ug {
  direction: rtl;
  font-size: 16px;
  font-family: 'Alpsoft Qara';
}

.zh {
  direction: ltr;
  font-size: 15px;
  font-family: '黑体';
}