.result {
  height: auto;
  background-color: #fff;
  padding: 15px;
}

.result-box {
  margin: 20px 0px;
  padding: 0 10px;
}

.type {
  color: blueviolet;
  font-weight: bold;
  font-size: 20px;
  margin-bottom: 20px;
  text-align: center;
}

.t-ug {
  direction: rtl;
  font-size: 22px;
  font-family: 'Shirkhan egme';
}

.t-zh {
  direction: ltr;
  font-size: 24px;
  margin-bottom: 30px;
  font-family: '酷乐潮玩体';
}

.info {
  margin-top: 15px;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.pics {
  width: 350px;
  height: 350px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin: 0 auto;
}

image {
  height: 100%;
  width: 100%;
}

.share {
  color: #666;
  margin: 20px 0;
  font-size: 14px;
  font-family: '黑体';
}

.share-ug {
  color: #666;
  margin: 20px 0;
  font-size: 15px;
  font-family: 'Alpsoft Qara';
}

.ug {
  font-size: 18px;
  direction: rtl;
  font-family: 'Alpsoft Qara';
}

.zh {
  font-size: 16px;
  direction: ltr;
  font-family: '黑体';
}

.bold {
  font-weight: bold;
}