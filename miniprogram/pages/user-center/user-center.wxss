.page_container {
  background-color: #f5f5f5;
  height: 100vh;
}

.top_bg {
  height: 120rpx;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
}

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  translate: 0 -30px;
}

.avatar {
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
}

.tips {
  color: rgb(68, 10, 122);
}

.t-ug {
  font-size: 22px;
  font-family: 'Alpsoft Jurnal';
}

.t-zh {
  font-size: 20px;
  font-family: '黑体';
}

.mbti {
  margin-top: 20px;
  color: blueviolet;
  font-size: 25px;
  font-family: 'Trebuchet MS';
}

.settings {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}

.contact-button {
  box-sizing: border-box;
  padding-left: 0rpx;
  width: 400rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: left;
}

.button-hover {
  background-color: transparent;
}

.ug {
  font-size: 33rpx;
  font-family: 'Alpsoft Jurnal';
}

.zh {
  font-size: 31rpx;
  font-family: '黑体';
}