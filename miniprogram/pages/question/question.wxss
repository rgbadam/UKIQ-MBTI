  padding: 20rpx 0 100rpx;
}

.faq {
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  margin: 30rpx 0rpx 50rpx;
}

.faq-ug {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
