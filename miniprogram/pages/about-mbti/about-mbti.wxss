page {
  width: 100%;
  height: 100%;
  align-items: center;
  background-color: #fff;
}

.about-mbti {
  width: 90%;
  color: #333;
  line-height: 26px;
  padding: 30rpx 0 50rpx;
}

.fontText .about {
  font-size: 21px;
  font-weight: 500;
  text-align: center;
  margin: 15px 0 46px;
  font-family: '创粗圆';
}

.fontText .about-ug {
  font-size: 20px;
  font-weight: 500;
  text-align: center;
  margin: 15px 0 46px;
  font-family: 'Shirkhan Yumilaq';
}

.fontPic .about {
  width: 88px;
  height: 24px;
  display: block;
  margin: 15px auto 46px;
}

.fontPic .about-ug {
  width: 150px;
  height: 30px;
  display: block;
  margin: 15px auto 46px;
}

.title {
  margin: 10rpx 0 20rpx;
}

.type-name {
  font-weight: 500;
  margin-top: 10px;
}

.type-desc {
  font-size: 14px;
  margin-bottom: 10px;
  font-family: '创粗圆';
}

.content {
  font-size: 15px;
}

.type-name-ug {
  font-weight: 600;
  margin-top: 10px;
}

.type-desc-ug {
  font-size: 12px;
  margin-bottom: 10px;
  font-family: 'shirkhan yumilaq';
}

.content-ug {
  font-size: 17px;
  text-align: justify;
}

.info {
  margin: 20px 0;
}

.reminder {
  color: #666;
  margin: 20px 0;
  font-size: 14px;
}

.reminder-ug {
  color: #666;
  margin: 20px 0;
  font-size: 15px;
}

.ug {
  direction: rtl;
  font-size: 17px;
  font-family: 'Alpsoft Qara';
}

.zh {
  direction: ltr;
  font-size: 16px;
  font-family: '黑体';
}

.pics {
  width: 100%;
  height: 465rpx;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 15px;
}

image {
  width: 100%;
  height: 100%;
}