.discover-container {
  width: 100%;
  min-height: 100vh;
  background: #f6f7fb;
  box-sizing: border-box;
}

.custom-navbar {
  position: fixed;
  z-index: 999;
}

.t-navbar-content {
  background: #fff;
  box-shadow: 0 2rpx 16rpx rgba(91,61,227,0.04);
  border-radius: 0 0 36rpx 36rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0rpx;
}

.lang-switcher {
  display: flex;
  padding: 4rpx 0;
  align-items: center;
  background: rgba(0, 0, 0, 0.04);
  border-radius: 36px;
  position: relative;
  width: fit-content;
  min-width: 90px;
}
.lang-text {
  font-size: 13px;
  color: #666;
  font-weight: 500;
  padding: 4px 2px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
  flex: 1;
  text-align: center;
  white-space: nowrap;
  min-width: 40px;
  position: relative;
  font-family: "Shirkhan Egme", "黑体", Arial;
  transform: translateY(5rpx);
}
.lang-text.active {
  color: #0061b0;
}
.slider {
  position: absolute;
  height: 85%;
  background: #ffffff;
  border-radius: 32px;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  top: 50%;
  transform: translateY(-50%);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  width: calc(50% - 2px);
  left: 2px;
}
.slider.right {
  transform: translate(calc(100% + 4rpx), -50%);
}
.lang-switch {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 56rpx;
  color: #333;
  background: rgba(91,61,227,0.04);
  border-radius: 32rpx;
  border: 1px solid rgba(91,61,227,0.08);
  font-weight: 500;
  gap: 10rpx;
}
.lang-switch-text {
  font-size: 28rpx;
  transform: translateY(5rpx);
  font-family: "Shirkhan Egme", "黑体", Arial;
}
.lang-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  font-family: "Shirkhan Egme", "黑体", Arial;
  transform: translateY(10rpx);
}

.main-card {
  margin: 0 24rpx;
  margin-top: 210rpx;
  background: #fff;
  border-radius: 36rpx;
  box-shadow: 0 8rpx 32rpx rgba(91,61,227,0.08);
  padding: 20rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fade-up 0.8s cubic-bezier(0.4, 0, 0.2, 1) both;
}

/* Poster Section */
.poster {
  width: 100%;
  height: 420rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
  border-radius: 18rpx;
  overflow: hidden;
  animation: scale-in 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.1s both;
}
.poster-image {
  width: 100%;
  height: 100%;
  transform: translateY(-20rpx);
}
.poster-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 90rpx;
  background: linear-gradient(90deg, #7B5FFF 0%, #5B3DE3 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 46rpx;
  margin: 10rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(91,61,227,0.12);
  transition: all 0.2s ease-in-out;
  border: none;
  font-family: "Shirkhan Egme", "黑体", Arial;
  animation: fade-up 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s both;
}
.poster-button:active {
  transform: scale(0.98);
}

/* Function Section */
.func-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 70rpx 0 10rpx 0;
  font-family: sans-serif, "Alpsoft Jurnal", "黑体", Arial;
  animation: fade-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
}

.func-options {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0 24rpx 0;
  animation: fade-up 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
}
.option-item {
  width: 30%;
  background: #f6f7fb;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(91,61,227,0.04);
}
.option-icon {
  width: 48rpx; 
  height: 48rpx;
  margin-bottom: 20rpx;
}
.option-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  font-family: sans-serif, "Alpsoft Esliye", "黑体", Arial;
}

/* Result Section */
.result {
  width: 100%;
  margin-top: 32rpx;
  background: #f6f7fb;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(91,61,227,0.04);
  padding: 48rpx 0 36rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: fade-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.5s both;
}
.result-title {
  font-size: 36rpx;
  color: #5B3DE3;
  font-weight: 800;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
  font-family: sans-serif, "Alpsoft Jurnal", "黑体", Arial;
}
.result-value {
  font-size: 44rpx;
  color: #E94F6B;
  font-weight: 800;
  letter-spacing: 2rpx;
  font-family: 'Poppins', 'Arial', sans-serif;
}

/* 动画关键帧 */
@keyframes fade-up {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}



@keyframes scale-in {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}




