.personal-page {
  width: 100%;
  min-height: 100vh;
  background: #fafbfc;
}

.custom-navbar {
  --td-navbar-bg-color: transparent;
  position: fixed;
  z-index: 999;
}

/* 导航栏样式 */
.lang-switcher {
  display: flex;
  padding: 4rpx 0;
  align-items: center;
  background: rgba(0, 0, 0, 0.04);
  border-radius: 36px;
  position: relative;
  width: fit-content;
  min-width: 90px;
}

.lang-text {
  font-size: 13px;
  color: #666;
  font-weight: 500;
  padding: 4px 2px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
  flex: 1;
  text-align: center;
  white-space: nowrap;
  min-width: 40px;
  position: relative;
  font-family: "Shirkhan Egme", "黑体", Arial;
  transform: translateY(5rpx);
}

.lang-text.active {
  color: #0061b0;
}

/* 优化滑块效果 */
.slider {
  position: absolute;
  height: 85%;
  background: #ffffff;
  border-radius: 32px;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  top: 50%;
  transform: translateY(-50%);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
  width: calc(50% - 2px);
  left: 2px;
}

.slider.right {
  transform: translate(calc(100% + 4rpx), -50%);
}

/* 添加响应式媒体查询 */
@media screen and (max-width: 375px) {
  .lang-switcher {
    min-width: 80px;
  }
  
  .lang-text {
    font-size: 12px;
    padding: 4px 8px;
  }
}

@media screen and (min-width: 768px) {
  .lang-switcher {
    min-width: 100px;
  }
  
  .lang-text {
    font-size: 14px;
    padding: 6px 12px;
  }
}

/* 个人资料容器 */
.profile-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 160rpx 32rpx 20rpx;
}

/* 头像 */
.profile-illust-container {
  position: relative;
  margin-bottom: 30rpx;
  animation: scale-in 0.8s cubic-bezier(0.4, 0, 0.2, 1) both;
}

.profile-illust {
  width: 350rpx;
  height: 430rpx;
  border-radius: 160rpx 160rpx 60rpx 60rpx;
  object-fit: cover;
  border: 3rpx solid rgba(255, 255, 255, 0.95);
  box-shadow: 
    0 32rpx 80rpx rgba(99, 102, 241, 0.08),
    0 16rpx 40rpx rgba(139, 92, 246, 0.06),
    0 8rpx 20rpx rgba(168, 85, 247, 0.04),
    0 4rpx 10rpx rgba(196, 181, 253, 0.03),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.02);
  position: relative;
  z-index: 10;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform: perspective(1000rpx);
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
}

.profile-illust:active {
  transform: perspective(1000rpx) translateY(-4rpx) scale(1.01);
  box-shadow: 
    0 40rpx 100rpx rgba(99, 102, 241, 0.12),
    0 20rpx 50rpx rgba(139, 92, 246, 0.08),
    0 12rpx 25rpx rgba(168, 85, 247, 0.06),
    0 6rpx 15rpx rgba(196, 181, 253, 0.04),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9),
    inset 0 -1rpx 2rpx rgba(0, 0, 0, 0.03);
  border-color: rgba(255, 255, 255, 1);
}

.profile-illust::before {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  right: -50rpx;
  bottom: -50rpx;
  border-radius: 210rpx 210rpx 110rpx 110rpx;
  background: 
    radial-gradient(ellipse at 30% 20%, rgba(99, 102, 241, 0.06), transparent 50%),
    radial-gradient(ellipse at 70% 80%, rgba(139, 92, 246, 0.04), transparent 50%),
    conic-gradient(
      from 45deg at 50% 50%, 
      transparent 0deg,
      rgba(168, 85, 247, 0.03) 90deg,
      rgba(196, 181, 253, 0.02) 180deg,
      rgba(99, 102, 241, 0.03) 270deg,
      transparent 360deg
    );
  z-index: -3;
  filter: blur(2rpx);
  opacity: 0.7;
}

.profile-illust::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right: 8rpx;
  bottom: 8rpx;
  border-radius: 152rpx 152rpx 52rpx 52rpx;
  background: 
    linear-gradient(
      135deg, 
      rgba(255, 255, 255, 0.1) 0%,
      transparent 30%,
      rgba(99, 102, 241, 0.02) 70%,
      rgba(255, 255, 255, 0.05) 100%
    );
  z-index: 1;
  opacity: 0.6;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 动画 */

@keyframes fade-up {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scale-in {
  0% {
    opacity: 0;
    transform: scale(0.85);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 个人信息 */
.profile-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  text-align: center;
  padding: 0 24rpx;
  animation: fade-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.1s both;
}

.profile-name {
  font-size: 50rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #2d3748 0%, #4a5568 30%, #2d3748 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  font-family: sans-serif, 'Shirkhan Egme', '黑体';
  margin-bottom: 18rpx;
  letter-spacing: -0.5rpx;
  line-height: 1.2;
}

.profile-sign {
  font-size: 32rpx;
  color: #718096;
  opacity: 0.9;
  padding: 0 16rpx;
  font-family: sans-serif, 'Alpsoft Jurnal', '黑体';
}

/* 功能图标 */
.profile-funcs {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  width: 100%;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  animation: fade-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s both;
}

.profile-funcs-row {
  display: flex;
  gap: 18rpx;
  justify-content: center;
}

.profile-func-block,
.share-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0.65));
  border-radius: 28rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  flex: 1;
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  overflow: hidden;
  animation: scale-in 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
}

.profile-func-block:active,
.share-button:active {
  transform: translateY(-2rpx) scale(1.02);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.profile-func-block::before,
.share-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3) 50%, transparent);
  transition: left 0.6s ease;
  z-index: 1;
}

.profile-func-block:active,
.share-button:active {
  transform: translateY(1rpx) scale(0.98);
}

.profile-func-block:active::before,
.share-button:active::before {
  left: 100%;
}

.share-button {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0.65)) !important;
  margin: 0 !important;
  line-height: normal !important;
  color: #4a5568 !important;
}

.profile-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 6rpx;
}

.profile-func-label {
  font-size: 26rpx;
  color: #4a5568;
  text-align: center;
  font-family: sans-serif, 'Alpsoft Esliye', '黑体';
}

.quote-box {
  display: block;
  margin: 50rpx 16rpx 0;
  padding: 50rpx 100rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.15));
  border-radius: 32rpx;
  backdrop-filter: blur(12rpx);
  position: relative;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fade-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
  transition: transform 0.3s ease;
}

.quote-box::before,
.quote-box::after {
  font: 80rpx Georgia, serif;
  color: rgba(0, 0, 0, 0.05);
  position: absolute;
  z-index: 1;
}

.quote-box::before {
  content: '"';
  top: 18rpx;
  left: 16rpx;
}

.quote-box::after {
  content: '"';
  bottom: 18rpx;
  right: 16rpx;
  transform: scaleY(-1);
}

.quote-box .text {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 1.6;
  color: #4a5568;
  text-align: center;
  position: relative;
  z-index: 2;
  margin: 12rpx 0 0;
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  /* width: 100%; */
}

.quote-box .text.rtl {
  direction: rtl;
}

.quote-box .text.ltr {
  direction: ltr;
}

