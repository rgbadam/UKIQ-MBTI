/* Page Container */
.favorites-page {
  min-height: 100vh;
  background: transparent;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.favorites-page::before {
  content: "";
  position: fixed;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(79, 110, 247, 0.05) 0%, rgba(79, 110, 247, 0) 70%);
  transform: rotate(-15deg);
  z-index: 0;
}

/* Loading State */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  gap: 20rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(79, 110, 247, 0.1);
  border-top: 4rpx solid #4f6ef7;
  border-radius: 50%;
  animation: spin 1.2s cubic-bezier(0.76, 0, 0.24, 1) infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Navigation Bar */
.navbar {
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  position: fixed;
  padding-top: calc(env(safe-area-inset-top));
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 5rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.15);
  position: relative;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  color: #ffffff;
  font-size: 35rpx;
  padding: 15rpx 0;
  text-align: center;
  font-family: "Shirkhan Egme";
  position: relative;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* Action Group */
.header-actions {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
  margin-top: calc(env(safe-area-inset-top) + 80rpx);
  
}
.stats-section {
  width: 100%;
  display: flex;
  justify-content: center;
}

.stats-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.stats-number {
  font-size: 68rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.stats-label {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.95);
  font-family: "Shirkhan Egme";
}

.filters-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.action-btn {
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 16rpx;
  border-radius: 50rpx;
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.action-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.15);
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  min-width: 44rpx;
}

.action-text {
  min-width: 80rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  font-weight: bolder;
  font-family: "Alpsoft Jurnal";
}

/* Names List */
.names-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.name-card {
  display: flex;
  flex-direction: column;
  padding: 30rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(79, 110, 247, 0.08);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.name-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 110, 247, 0.06);
}

.avatar-container {
  width: 88rpx;
  height: 88rpx;
  border-radius: 28rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.male-avatar {
  background: linear-gradient(145deg, #edf3ff 0%, #e3edfd 100%);
}

.female-avatar {
  background: linear-gradient(145deg, #fff0f5 0%, #ffe6f0 100%);
}

.avatar-letter {
  font-size: 34rpx;
  font-weight: bold;
  color: #5c67ff;
  font-family: "Shirkhan Egme";
  transform: translateY(6rpx);
}

.female-avatar .avatar-letter {
  color: #ff6b95;
}

.name-details {
  text-align: center;
  margin-bottom: 20rpx;
}

.name-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  font-family: "Shirkhan Egme";
  line-height: 1.3;
}
.name-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.name-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.save-time {
  direction: rtl;
  font-size: 24rpx;
  color: #666;
  font-family: 'Alpsoft Jurnal';
  opacity: 0.8;
  margin-left: 10rpx;
}

.unfavorite-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.unfavorite-icon {
  width: 34rpx;
  height: 34rpx;
  opacity: 0.6;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 40rpx 100rpx;
  min-height: 60vh;
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.empty-image {
  width: 420rpx;
  height: 420rpx;
  transform: scale(0.95);
  animation: float 4s ease-in-out infinite;
  position: relative;
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  font-family: "Shirkhan Egme";
  text-align: center;
  margin: 30rpx 0 10rpx;
  opacity: 0.9;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #666;
  font-family: "Alpsoft Jurnal";
  text-align: center;
  opacity: 0.7;
  margin-bottom: 40rpx;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4f6ef7 0%, #6a8dff 100%);
  margin-top: 20rpx;
  padding: 18rpx 40rpx;
  border-radius: 100rpx;
  box-shadow: 0 8rpx 20rpx rgba(79, 110, 247, 0.2);
  transition: all 0.3s ease;
}

.search-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(79, 110, 247, 0.15);
}

.btn-text {
  color: #fff;
  font-size: 32rpx;
  font-family: "Alpsoft Jurnal";
}

.creative-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  z-index: 0;
  box-shadow: 0 20px 40px rgba(107, 70, 193, 0.15);
  background: linear-gradient(135deg, #6357e6 0%, #7157e6 50%, #6b46c1 100%);
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 30%, transparent 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 30%, transparent 100%);
}

/* Decorative Background */
.decorative-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  z-index: 0;
  overflow: hidden;
}

.gradient-circle {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.6;
  animation: float 8s ease-in-out infinite;
}

.circle-1 {
  width: 500rpx;
  height: 500rpx;
  background: linear-gradient(135deg, #4f6ef7 0%, #6a8dff 100%);
  top: -100rpx;
  right: -100rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  top: 200rpx;
  left: -100rpx;
  animation-delay: -2s;
}

.circle-3 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #4f6ef7 0%, #6a8dff 100%);
  top: 600rpx;
  right: 0rpx;
  animation-delay: -4s;
}

.gradient-wave {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.8) 0%,
    rgba(255, 255, 255, 0.4) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  transform: skewY(-12deg);
  transform-origin: top left;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(0.95) rotate(0deg);
  }
  50% {
    transform: translateY(-15rpx) scale(0.95) rotate(1deg);
  }
}