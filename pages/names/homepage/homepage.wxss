.container {
  min-height: 100vh;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  background-color: #f8f9ff;
  font-family: 'Alpsoft Jurnal';
}

.container::before {
  content: '';
  position: fixed;
  top: -500rpx;
  left: -200rpx;
  right: -200rpx;
  height: 800rpx;
  background: linear-gradient(145deg, #6e54ec, #5c67ff);
  border-radius: 0 0 50% 50% / 0 0 100% 100%;
  transform: scaleX(1.5);
  box-shadow: 0 10rpx 50rpx rgba(92, 103, 255, 0.2);
  z-index: 0;
}

/* Loading state */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  position: relative;
  z-index: 10;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(92, 103, 255, 0.1);
  border-top: 4rpx solid #5c67ff;
  border-radius: 50%;
  animation: spin 1.2s cubic-bezier(0.76, 0, 0.24, 1) infinite;
  position: relative;
}

.spinner:before, .spinner:after {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(92, 103, 255, 0.05);
  animation: pulse 2s linear infinite;
}

.spinner:after {
  animation-delay: 1s;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0; }
  100% { transform: scale(1.6); opacity: 0; }
}

/* Navbar styles */
.custom-navbar {
  --td-navbar-bg-color: transparent;
  position: fixed;
  z-index: 999;
}

.t-navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-title-wrapper {
  width: calc(100% - 200rpx) !important;
  left: 100rpx !important;
}

.nav-title {
  font-size: 35rpx;
  text-align: center;
  letter-spacing: 1rpx;
  font-family: "Shirkhan Egme";
  color: #ffffff;
  width: 100%;
  display: block;
}

.nav-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.nav-search {
  padding: 17rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-search:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* Stacked Card Section */
.card-stack {
  margin-top: 150rpx;
  height: 700rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 2500rpx;
  transform-style: preserve-3d;
  width: 100%;
  overflow: hidden;
  max-width: 750rpx; /* 等于屏幕默认宽度 */
  margin-left: auto;
  margin-right: auto;
  z-index: 10;
}

.name-card-wrapper {
  position: absolute;
  transform-style: preserve-3d;
  will-change: transform, opacity;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  transition-property: none;
}

.prev-prev-card {
  width: 440rpx;
  z-index: 5;
  opacity: 0;
}

.prev-card {
  width: 440rpx;
  z-index: 7;
}

.current-card {
  width: 440rpx;
  z-index: 10;
}

.next-card {
  width: 440rpx;
  z-index: 7;
}

.next-next-card {
  width: 440rpx;
  z-index: 5;
  opacity: 0;
}

.name-card {
  height: 500rpx;
  border-radius: 40rpx;
  padding: 30rpx 40rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  direction: rtl;
  backface-visibility: hidden;
  transform: translateZ(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: #ffffff;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.male-card {
  background: linear-gradient(135deg, #f8faff 0%, #eef2ff 100%);
  box-shadow: 
    0 15rpx 35rpx rgba(76, 110, 245, 0.1),
    0 5rpx 15rpx rgba(76, 110, 245, 0.05),
    inset 0 0 0 1rpx rgba(76, 110, 245, 0.05);
}

.female-card {
