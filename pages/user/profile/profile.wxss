.profile-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f8fc 0%, #ffffff 50%);
  padding: 0rpx 32rpx;
}

/* VIP卡片 */
.vip-card {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 50%, #ff7675 100%);
  border-radius: 28rpx;
  padding: 50rpx 40rpx;
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 16rpx 48rpx rgba(255, 107, 107, 0.25);
  position: relative;
  overflow: hidden;
}

.vip-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.15) 0%, transparent 60%);
}

.vip-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.vip-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.profile-page.rtl .vip-header {
  align-items: start;
}

.vip-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
}

.vip-desc {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  font-weight: 500;
}

.vip-status {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 28rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  position: relative;
  z-index: 1;
}

.status-text {
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.vip-inactive {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 50%, #6b7280 100%) !important;
  box-shadow: 0 12rpx 32rpx rgba(107, 114, 128, 0.15) !important;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.vip-inactive::before {
  background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.06) 0%, transparent 60%) !important;
}

.vip-inactive .vip-title {
  opacity: 0.95;
}

.vip-inactive .vip-desc {
  opacity: 0.85;
}

.vip-inactive .status-text {
  opacity: 0.75;
}

.vip-inactive .vip-status {
  background: rgba(255, 255, 255, 0.08) !important;
  border-color: rgba(255, 255, 255, 0.15) !important;
}

/* 数据卡片 */
.data-cards {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.data-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-number {
  font-size: 40rpx;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  min-height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-label {
  font-size: 26rpx;
  color: #6d7177;
  font-weight: 500;
}

/* 数据卡片空数据样式 */
.card-number.empty-data {
  font-size: 28rpx !important;
  color: #94a3b8 !important;
  font-weight: 500 !important;
  opacity: 0.8;
}

/* 个人信息列表 */
.info-list {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 28rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04), 0 0 0 1rpx rgba(255, 255, 255, 0.95);
  overflow: hidden;
  margin-bottom: 48rpx;
  position: relative;
}

.info-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(76, 110, 245, 0.1) 50%, transparent 100%);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 36rpx 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  gap: 28rpx;
  position: relative;
  transition: background 0.3s ease;
}

.info-item:hover {
  background: rgba(248, 250, 252, 0.6);
}

.info-item:last-child {
  border-bottom: none;
}

/* 性别专属样式 */
.gender-item {
  position: relative;
  overflow: hidden;
}

.gender-item[data-gender="male"]::before {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.03) 0%, rgba(147, 197, 253, 0.02) 100%);
}

.gender-item[data-gender="female"]::before {
  background: linear-gradient(135deg, rgba(236, 72, 153, 0.03) 0%, rgba(249, 168, 212, 0.02) 100%);
}

.gender-icon {
  position: relative;
}

.gender-icon[data-gender="male"] {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(147, 197, 253, 0.05) 100%);
  border-color: rgba(59, 130, 246, 0.15);
}

.gender-icon[data-gender="female"] {
  background: linear-gradient(135deg, rgba(236, 72, 153, 0.08) 0%, rgba(249, 168, 212, 0.05) 100%);
  border-color: rgba(236, 72, 153, 0.15);
}

.gender-value {
  position: relative;
}

.gender-switch {
  position: relative;
}

.gender-item[data-gender="male"] .gender-switch {
  color: #3b82f6 !important;
  background: rgba(59, 130, 246, 0.05) !important;
  border-color: rgba(59, 130, 246, 0.12) !important;
}

.gender-item[data-gender="female"] .gender-switch {
  color: #ec4899 !important;
  background: rgba(236, 72, 153, 0.05) !important;
  border-color: rgba(236, 72, 153, 0.12) !important;
}

.info-icon {
  flex-shrink: 0;
  padding: 14rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.8) 100%);
  border-radius: 18rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-label {
  font-size: 26rpx;
  color: #64748b;
  letter-spacing: 0.3rpx;
}

.info-value {
  font-size: 30rpx;
  color: #0f172a;
  /* font-weight: 500; */
  letter-spacing: 0.5rpx;
}

.profile-page.rtl .info-value {
  font-size: 32rpx;
}

/* 空数据样式 */
.empty-data {
  color: #94a3b8 !important;
  font-weight: 400 !important;
  opacity: 0.8;
}

/* 文本按钮 */
.edit-text, .copy-text, .switch-text {
  font-size: 24rpx;
  font-weight: 500;
  padding: 12rpx 24rpx;
  border-radius: 18rpx;
  transition: all 0.2s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  letter-spacing: 0.3rpx;
  background: rgba(248, 250, 252, 0.8);
  color: #475569;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.02);
}

.profile-page.rtl .edit-text, .copy-text, .switch-text {
  font-size: 26rpx;
}

.edit-text {
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.05);
  border-color: rgba(59, 130, 246, 0.12);
}

.copy-text {
  color: #10b981;
  background: rgba(16, 185, 129, 0.05);
  border-color: rgba(16, 185, 129, 0.12);
}

.switch-text {
  color: #8b5cf6;
  background: rgba(139, 92, 246, 0.05);
  border-color: rgba(139, 92, 246, 0.12);
}

.edit-text:active {
  transform: scale(0.96);
  background: rgba(59, 130, 246, 0.1);
  border-color: rgba(59, 130, 246, 0.2);
}

.copy-text:active {
  transform: scale(0.96);
  background: rgba(16, 185, 129, 0.1);
  border-color: rgba(16, 185, 129, 0.2);
}

.switch-text:active {
  transform: scale(0.96);
  background: rgba(139, 92, 246, 0.1);
  border-color: rgba(139, 92, 246, 0.2);
}

/* 退出登录区域 */
.logout-section {
  padding: 64rpx 40rpx 48rpx;
  display: flex;
  justify-content: center;
  position: relative;
}

.logout-section::before {
  content: '';
  position: absolute;
  top: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(203, 213, 225, 0.6) 50%, transparent 100%);
}

.logout-btn {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 500;
  padding: 26rpx 60rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.8);
  border-radius: 40rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  letter-spacing: 0.8rpx;
}

.logout-btn:active {
  color: #ef4444;
  border-color: rgba(239, 68, 68, 0.2);
}

.profile-page.rtl .info-item,
.profile-page.rtl .data-card,
.profile-page.rtl .vip-card,
.profile-page.rtl .info-content {
  direction: rtl;
}

.profile-page.rtl .card-label,
.profile-page.rtl .edit-text,
.profile-page.rtl .copy-text,
.profile-page.rtl .switch-text,
.profile-page.rtl .logout-btn,
.profile-page.rtl .info-label,
.profile-page.rtl .info-value,
.profile-page.rtl .card-number {
  letter-spacing: 0 !important;
}

.profile-page,
.vip-desc,
.card-number,
.info-list {
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
}
.data-cards,
.vip-card {
  font-family: sans-serif, '黑体', 'Shirkhan Egme';
}
.info-value { font-family: sans-serif, '黑体', 'Alpsoft Jurnal'; }

/* 编辑输入框样式 */
.edit-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  width: 100%;
  margin-top: 8rpx;
}

.edit-input {
  flex: 1;
  font-size: 30rpx;
  color: #0f172a;
  padding: 16rpx 24rpx;
  background: #ffffff;
  border: 2rpx solid #4c6ef5;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(76, 110, 245, 0.1);
  transition: all 0.3s ease;
  font-family: sans-serif, '黑体', 'Alpsoft Jurnal';
}

.profile-page.rtl .edit-input {
  font-size: 32rpx;
  text-align: right;
}

.edit-input:focus {
  border-color: #3b82f6;
  box-shadow: 0 4rpx 12rpx rgba(76, 110, 245, 0.15);
  outline: none;
}

.edit-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 999rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.4);
  background: rgba(248, 250, 252, 0.9);
  transition: all 0.2s ease;
  box-shadow: 0 1rpx 3rpx rgba(15, 23, 42, 0.08);
}

.icon-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #475569;
  line-height: 1;
}

.save-btn {
  border-color: rgba(37, 99, 235, 0.35);
  background: rgba(239, 246, 255, 0.95);
}

.save-btn:active {
  transform: scale(0.95);
  background: rgba(219, 234, 254, 0.95);
  box-shadow: 0 1rpx 4rpx rgba(37, 99, 235, 0.16);
}

.cancel-btn {
  border-color: rgba(148, 163, 184, 0.5);
  background: rgba(248, 250, 252, 0.95);
}

.cancel-btn:active {
  transform: scale(0.95);
  background: rgba(226, 232, 240, 0.95);
  box-shadow: 0 1rpx 4rpx rgba(148, 163, 184, 0.18);
}

/* 手机号输入框特殊样式 */
.info-item:nth-child(3) .edit-input {
  border-color: #10b981;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.1);
}

.info-item:nth-child(3) .edit-input:focus {
  border-color: #059669;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.15);
}
