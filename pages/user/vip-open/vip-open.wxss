.vip-open-page {
  min-height: 100vh;
  padding: 32rpx 28rpx 60rpx;
  background: #f5f5fa;
  box-sizing: border-box;
}

.vip-open-page.rtl {
  direction: rtl;
}

.vip-hero {
  background: linear-gradient(135deg, #4c6ef5, #8b5cf6);
  border-radius: 26rpx;
  padding: 26rpx 24rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.16);
  display: flex;
  flex-direction: column;
  gap: 26rpx;
  margin-bottom: 36rpx;
}

.hero-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.vip-hero-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 999rpx;
  /* background: rgba(250, 221, 82, 0.23); */
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #fff;
}

.hero-texts {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.vip-hero-title {
  font-size: 32rpx;
  font-weight: 600;
}

.vip-hero-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-top: 2rpx;
}

.capsule-list {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}

.capsule-item {
  display: flex;
  align-items: center;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(250, 255, 255, 0.16);
  font-size: 24rpx;
  color: #e5e7eb;
}

.capsule-text {
  white-space: nowrap;
}

.vip-section {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 22rpx 22rpx 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 36rpx;
}

.section-title {
  position: relative;
  margin-bottom: 18rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 60%;
  border-radius: 999rpx;
  background: linear-gradient(180deg, #4c6ef5, #8b5cf6);
}

.vip-open-page.rtl .section-title {
  padding-left: 0;
  padding-right: 20rpx;
}

.vip-open-page.rtl .section-title::before {
  left: auto;
  right: 0;
}

.login-hint-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 28rpx;
  padding: 24rpx;
  border-radius: 18rpx;
  background: #f9fafb;
  /* border: 1rpx solid #e5e7eb; */
}

.login-hint-texts {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
  padding-right: 16rpx;
}

.login-hint-main {
  font-size: 26rpx;
  color: #ef4444;
  font-weight: 00;
}

.login-hint-sub {
  font-size: 22rpx;
  color: #6b7280;
}

.login-btn {
  border-radius: 999rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  background: #4c6ef5;
  color: #ffffff;
  border: none;
}

.form-content {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  margin-bottom: 38rpx;
}

.form-label {
  font-size: 24rpx;
  color: #4b5563;
  margin-bottom: 10rpx;
  display: block;
}

.form-card {
  margin-top: 28rpx;
}

.vip-edit-input {
  flex: 1;
  font-size: 28rpx;
  color: #0f172a;
  padding: 18rpx 24rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.vip-edit-input.focused {
  border: 1rpx solid #4c6ef5;
}

.vip-open-page.rtl .vip-edit-input {
  text-align: right;
}

.primary-btn,
.secondary-btn {
  width: 100%;
  padding: 20rpx 0;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 22rpx;
  border: none;
}

.primary-btn {
  background: #4c6ef5;
  color: #ffffff;
}

.primary-btn:active {
  background: #3b5bdb;
}

.secondary-btn {
  background: #f3f4f6;
  color: #374151;
}

.secondary-btn:active {
  background: #e5e7eb;
}

.price-card-wrapper {
  margin: 28rpx 0;
  padding: 0;
}

.price-card-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -6rpx;
}

.price-card {
  display: grid;
  width: 48%;
  margin: 1%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 14rpx;
  border: 1rpx solid #ececec;
  overflow: hidden;
  box-shadow: none;
  transition: border-color 0.2s;
}

.price-card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 18rpx;
}

.price-card-name {
  font-size: 24rpx;
  color: #0f172a;
  line-height: 1.5;
  flex: 1;
}

.price-card-price {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.price-card-amount {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 20rpx;
  font-weight: 500;
  color: #4c6ef5;
  margin-right: 3rpx;
}

.vip-open-page.rtl .price-symbol {
  margin-right: 0;
  margin-left: 3rpx;
}

.price-number {
  font-size: 30rpx;
  font-weight: 500;
  color: #4c6ef5;
  line-height: 1;
  letter-spacing: -0.5rpx;
}

.price-card-contact {
  font-size: 20rpx;
  color: #64748b;
  line-height: 1.4;
  white-space: nowrap;
}

.vip-open-page.rtl .price-card-price {
  margin-left: 0;
  margin-right: 16rpx;
}

.qr-wrapper {
  padding: 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  border: 2rpx solid #4c6ef5;
  box-shadow: 0 2rpx 8rpx rgba(76, 110, 245, 0.1);
}

.qr-hint {
  margin-top: 22rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.pay-actions {
  margin-top: 12rpx;
}

.pay-message {
  margin-top: 16rpx;
}

.pay-message-inner {
  padding: 14rpx 18rpx;
  border-radius: 18rpx;
  background: #ecfdf5;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.pay-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: #22c55e;
}

.pay-message-text {
  font-size: 24rpx;
  color: #166534;
}

.vip-open-page,
.vip-open-page .section-title,
.vip-open-page .section-desc,
.vip-open-page .vip-hero-title,
.vip-open-page .vip-hero-subtitle,
.vip-open-page .capsule-text,
.vip-open-page .form-label,
.vip-open-page .primary-btn,
.vip-open-page .secondary-btn,
.vip-open-page .login-hint {
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
}


