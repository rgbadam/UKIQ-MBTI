.vip-detail-page {
  min-height: 100vh;
  padding: 32rpx 28rpx 60rpx;
  background: #f5f5fa;
  box-sizing: border-box;
}

.vip-detail-page.rtl {
  direction: rtl;
}

.vip-hero {
  background: linear-gradient(135deg, #4c6ef5, #8b5cf6);
  border-radius: 26rpx;
  padding: 26rpx 24rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.16);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 36rpx;
}

.vip-hero.vip-inactive {
  background: linear-gradient(135deg, #64748b, #94a3b8);
}

.hero-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 18rpx;
}

.hero-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.vip-hero-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #fff;
}

.hero-texts {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.vip-hero-title {
  font-size: 32rpx;
  font-weight: 600;
}

.vip-hero-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-top: 2rpx;
}

.status-chip {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-on {
  background: rgba(16, 185, 129, 0.2);
  color: #bbf7d0;
}

.status-off {
  background: rgba(248, 250, 252, 0.16);
  color: #e5e7eb;
}

.vip-section {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 22rpx 22rpx 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 36rpx;
}

.section-title {
  position: relative;
  margin-bottom: 18rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 60%;
  border-radius: 999rpx;
  background: linear-gradient(180deg, #4c6ef5, #8b5cf6);
}

.vip-detail-page.rtl .section-title {
  padding-left: 0;
  padding-right: 20rpx;
}

.vip-detail-page.rtl .section-title::before {
  left: auto;
  right: 0;
}

.capsule-list {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}

.capsule-item {
  display: flex;
  align-items: center;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(250, 255, 255, 0.16);
  font-size: 24rpx;
  color: #e5e7eb;
}

.capsule-text {
  white-space: nowrap;
}

.contact-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.primary-btn {
  width: 100%;
  padding: 20rpx 0;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 0;
  border: none;
  background: #4c6ef5;
  color: #ffffff;
}

.primary-btn:active {
  background: #3b5bdb;
}

.login-hint-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 18rpx;
  padding: 22rpx;
  border-radius: 18rpx;
  background: #f9fafb;
}

.login-hint-texts {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  padding-right: 16rpx;
}

.login-hint-main {
  font-size: 26rpx;
  color: #ef4444;
  font-weight: 600;
}

.login-hint-sub {
  font-size: 22rpx;
  color: #6b7280;
}

.login-btn {
  border-radius: 999rpx;
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  background: #4c6ef5;
  color: #ffffff;
  border: none;
}

.vip-detail-page.rtl .login-hint-row {
  flex-direction: row-reverse;
}

.vip-detail-page.rtl .login-hint-texts {
  padding-right: 0;
  padding-left: 16rpx;
  text-align: right;
}

.history-active {
  background: rgba(16, 185, 129, 0.12);
  color: #059669;
}

.history-ended {
  background: #f3f4f6;
  color: #6b7280;
}

.membership-card {
  padding: 22rpx;
  border-radius: 22rpx;
  background: #f8fafc;
  border: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.membership-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.membership-plan {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.membership-status {
  font-size: 22rpx;
  border-radius: 999rpx;
  padding: 6rpx 16rpx;
}

.membership-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #4b5563;
}

.membership-label {
  color: #6b7280;
}

.membership-value {
  font-weight: 600;
  color: #111827;
}

.membership-notes {
  font-size: 22rpx;
  color: #6b7280;
}

.membership-tip {
  font-size: 22rpx;
  color: #94a3b8;
}

.membership-empty {
  padding: 24rpx;
  border-radius: 22rpx;
  background: #f1f5f9;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.membership-empty-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.membership-empty-desc {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.5;
}

.ghost-btn {
  border: 1rpx solid #4c6ef5;
  border-radius: 999rpx;
  padding: 10rpx 26rpx;
  font-size: 24rpx;
  background: transparent;
  color: #4c6ef5;
  align-self: flex-start;
}

.contact-inline {
  margin-top: 8rpx;
  padding: 18rpx 20rpx;
  border-radius: 22rpx;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  gap: 18rpx;
}

.contact-inline-texts {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.contact-inline-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.contact-inline-desc {
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.5;
}

.contact-inline-btn {
  border: none;
  border-radius: 999rpx;
  padding: 10rpx 28rpx;
  font-size: 24rpx;
  background: #4c6ef5;
  color: #ffffff;
}

.vip-detail-page.rtl .contact-inline {
  flex-direction: row-reverse;
}

.vip-detail-page.rtl .membership-meta {
  flex-direction: row-reverse;
  text-align: right;
}

.vip-detail-page,
.vip-detail-page .section-title,
.vip-detail-page .vip-hero-title,
.vip-detail-page .vip-hero-subtitle,
.vip-detail-page .benefit-text,
.vip-detail-page .primary-btn {
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
}


