page {
  width: 100%;
  height: 100%;
  align-items: center;
  background-color: #fff;
}

.about-mbti {
  width: 90%;
  color: #333;
  line-height: 26px;
  padding: 30rpx 0 50rpx;
}

.fontText .about {
  font-size: 21px;
  font-weight: 500;
  text-align: center;
  margin: 5px 0 46px;
  font-family: sans-serif, 'Shirkhan Egme', '黑体';
}

.title {
  margin: 10rpx 0 20rpx;
}

.type-name {
  font-weight: 500;
  margin-top: 10px;
}

.type-desc {
  font-size: 14px;
  margin-bottom: 10px;
  font-family: sans-serif, 'Alpsoft Jurnal', '黑体';
}

.content {
  font-size: 15px;
}

.content-ug {
  font-size: 17px;
  text-align: justify;
}

.info {
  margin: 20px 0;
}

.reminder {
  color: #666;
  margin: 20px 0;
  font-size: 14px;
}

.reminder-ug {
  color: #666;
  margin: 20px 0;
  font-size: 15px;
}

.ug {
  direction: rtl;
  font-size: 17px;
  font-family: 'Alpsoft Jurnal';
}

.zh {
  direction: ltr;
  font-size: 16px;
  font-family: '黑体';
}

.pics {
  width: 100%;
  height: 465rpx;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 15px;
}

image {
  width: 100%;
  height: 100%;
}