.login-popup {
  width: 600rpx;
  border-radius: 24rpx;
  background: #fff;
  overflow: hidden;
  padding: 48rpx 32rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 36rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.login-tip {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 48rpx;
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #07c160 0%, #07a557 100%);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  border: none;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn.loading {
  opacity: 0.8;
}

.login-btn:not(.loading):active {
  transform: scale(0.98);
  opacity: 0.9;
}