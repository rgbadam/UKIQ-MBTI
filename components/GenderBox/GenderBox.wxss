.gender-popup {
  background: #fff;
  border-radius: 24rpx;
  width: 480rpx;
  min-height: 400rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.15);
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
  transition: all 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.gender-popup.expanded {
  width: 560rpx;
  min-height: 500rpx;
}

/* 关闭按钮 */
.close-button-container {
  position: absolute;
  top: -18rpx;
  right: -18rpx;
  z-index: 999;
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.close-button-container.show {
  opacity: 1;
  transform: translateY(0) scale(1);
}

.close-button-container.hide {
  opacity: 0;
  transform: translateY(-30rpx) scale(0.8);
  pointer-events: none;
}

.close-button {
  width: 44rpx;
  height: 44rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.close-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(24, 144, 255, 0.1) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.close-button:hover::before {
  transform: translateX(100%);
}

.close-button:hover {
  transform: scale(1.1);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  background: rgba(255, 255, 255, 1);
  border-color: rgba(24, 144, 255, 0.2);
}

.close-button:active {
  transform: scale(0.95);
}

.close-icon {
  width: 16rpx;
  height: 16rpx;
  position: relative;
}

.close-icon::before,
.close-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 2rpx;
  background: rgba(102, 102, 102, 0.8);
  border-radius: 1rpx;
  transition: all 0.3s ease;
}

.close-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.close-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.close-button:hover .close-icon::before,
.close-button:hover .close-icon::after {
  background: rgba(24, 144, 255, 0.8);
}

/* 内容区域 */
.gender-content {
  padding: 64rpx 48rpx 48rpx;
  text-align: center;
}

.title-container {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  overflow: hidden;
  transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.title-container.hide {
  height: 0;
  margin-bottom: 0;
  opacity: 0;
  transform: translateY(-40rpx);
}

.gender-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2c2c2c;
  opacity: 1;
  transform: translateY(0);
  transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.title-container.hide .gender-title {
  opacity: 0;
  transform: translateY(-30rpx);
}

.gender-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 32rpx;
  transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.gender-options.compact {
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.gender-option {
  background: #fafafa;
  border-radius: 20rpx;
  padding: 0;
  transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
  cursor: pointer;
  position: relative;
  border: 2rpx solid transparent;
  overflow: hidden;
  max-height: 200rpx;
}

.gender-option.hidden {
  opacity: 0;
  transform: scale(0.95);
  max-height: 0;
  padding: 0;
  margin: 0;
  pointer-events: none;
}

.gender-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: inherit;
  background: linear-gradient(135deg, transparent 0%, rgba(0, 0, 0, 0.02) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.gender-option.selected {
  background: #fff;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
}

.gender-option.selected::before {
  opacity: 1;
}

.gender-option.male.selected {
  border-color: #1890ff;
  background: linear-gradient(135deg, #f0f9ff 0%, #fff 100%);
}

.gender-option.female.selected {
  border-color: #eb2f96;
  background: linear-gradient(135deg, #fff0f6 0%, #fff 100%);
}

.option-wrapper {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  gap: 20rpx;
}

.avatar-container {
  flex-shrink: 0;
}

.gender-avatar {
  width: 80rpx;
  height: 80rpx;
  transition: transform 0.3s ease;
}

.gender-option.selected .gender-avatar {
  transform: scale(1.1);
}

.option-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.option-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.2;
}

.option-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
}

.action-area {
  flex-shrink: 0;
  position: relative;
}

/* 更多选项展示区域 */
.more-hint, .collapse-hint {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%) scale(0);
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  cursor: pointer;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.04);
  color: #999;
}

.more-hint.show, .collapse-hint.show {
  opacity: 1;
  transform: translateY(-50%) scale(1);
}

.more-hint:active, .collapse-hint:active {
  transform: translateY(-50%) scale(0.9);
  background: rgba(0, 0, 0, 0.08);
}

.more-options-section {
  opacity: 0;
  transform: translateY(20rpx);
  max-height: 0;
  transition: all 0.8s cubic-bezier(0.25, 0.8, 0.25, 1);
  margin-bottom: 0;
}

.more-options-section.show {
  opacity: 1;
  transform: translateY(0);
  max-height: 800rpx;
  margin-bottom: 32rpx;
}

.title-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.5s ease 0.3s;
}

.more-options-section.show .title-grid {
  opacity: 1;
  transform: translateY(0);
}

.title-item {
  background: #f8f9fa;
  border: 1rpx solid transparent;
  border-radius: 16rpx;
  padding: 10rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  min-height: 80rpx;
}

.title-text {
  font-size: 26rpx;
  color: #666;
  transition: color 0.3s ease;
  text-align: center;
  font-family: sans-serif, '黑体', 'Alpsoft Jurnal';
}

.title-item.selected .title-text {
  color: #1890ff;
  font-weight: 600;
}

/* 按钮区域 */
.button-container {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
  margin-top: 0;
}

.button-container.show {
  max-height: 100rpx;
  opacity: 1;
  transform: translateY(0);
  margin-top: 24rpx;
}

.confirm-btn {
  height: 90rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.confirm-button:active {
  transform: scale(0.98);
}

.button-text {
  flex-wrap: nowrap;
  font-family: sans-serif, '黑体', 'Alpsoft Esliye';
}

.button-prefix {
  opacity: 0.85;
  font-size: 28rpx;
  font-weight: 400;
  color: #ffffff;
  white-space: nowrap;
}

.button-content {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  white-space: nowrap;
}

.gender-popup.cn .button-text {
  direction: ltr;
  text-align: left;
}

.gender-popup.ug .button-text {
  direction: rtl;
  text-align: right;
}

.gender-popup.ug .title-text {
  font-size: 30rpx;
  font-weight: 500;
}